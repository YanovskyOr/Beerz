                <!--app:layout_constraintTop_toBottomOf="@+id/beerr_desc_tv" />-->

            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>